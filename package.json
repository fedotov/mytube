{
  "name": "mytube",
  "app_name": "mytube",
  "version": "0.0.1",
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "main": "src/index.js",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.17.1",
    "express-openapi": "^2.0.4",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mysql2": "^1.7.0",
    "nconf": "^0.10.0",
    "npm": "^6.9.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sequelize": "^5.10.1",
    "source-map-support": "^0.5.13",
    "swagger-ui-express": "^3.0.10",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/express": "^4.0.35",
    "@types/jest": "^24.0.18",
    "@types/node": "^6.0.111",
    "@types/supertest": "^2.0.4",
    "@types/validator": "^10.11.1",
    "dotenv": "^8.0.0",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "sinon": "^7.4.1",
    "should": "^13.2.3",
    "supertest": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.2.1",
    "tslint": "^5.18.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts)$",
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "silent": true,
    "collectCoverage": true
  },
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tsconfig.json --config tslint.json -t codeFrame",
    "start": "tsc && node -r dotenv/config src/index.js",
    "before-run-app": "sh local/docker-app-db-image.start.sh",
    "after-run": "sh local/docker-db-image.stop.sh",
    "jesttest": "jest --runInBand --forceExit",
    "test": "docker-compose up --build --abort-on-container-exit --exit-code-from app",
    "test-container": "npm-run-all --continue-on-error build jesttest",
    "watch": "tsc-watch --onSuccess 'node -r dotenv/config ./src/index.js' --onFailure 'echo Beep! Compilation Faile' --compiler typescript/bin/tsc"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
